---
interface Props {
  tags: string[];
}

let { tags } = Astro.props;
---

<span class="tags">
  {tags.map((tag) => <span class="tag">{tag}</span>)}
</span>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;

    .tag {
      color: var(--color-font-muted);
      font-size: 1rem;
    }
    .tag::before {
      content: "#";
    }
  }
</style>
